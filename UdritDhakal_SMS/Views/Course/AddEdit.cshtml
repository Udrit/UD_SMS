@model UdritDhakal_SMS.Models.Entity.CourseInfo
<div class="container">
    @{
        // Set browser tab title to "Update Store" if Model has an ID, otherwise set it to "Add Store"
        ViewData["Title"] = Model.Id > 0 ? "Update Course Info" : "Add Course Info";
    }
    <h1 class="mb-4"><b>@(Model.Id > 0 ? "Edit" : "Create") Course Information</b></h1>

    <form method="post" asp-action="AddEdit" enctype="multipart/form-data" class="needs-validation" novalidate>
        <input asp-for="Id" hidden />

        <div class="row">
            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="CourseName" class="form-label">Course Name</label>
                            <input asp-for="CourseName" class="form-control" />
                            <span asp-validation-for="CourseName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="CourseDescription" class="form-label">CourseDescription</label>
                            <input asp-for="CourseDescription" class="form-control" />
                            <span asp-validation-for="CourseDescription" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    @*  <div class="col-md-6 mb-3">
                    <div class="form-group">
                    <label asp-for="Credits" class="form-label"></label>
                    <input asp-for="Credits" class="form-control" />
                    <span asp-validation-for="Credits" class="text-danger"></span>
                    </div>
                    </div> *@
                    <div class="col-md-6 mb-3">
                        <div class="form-group form-check mt-4">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>
                    </div>

                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-outline-primary float-start ">@((Model.Id > 0) ? "Update" : "Create")</button>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Index" class="btn btn-outline-secondary float-end" asp-controller="Course">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
