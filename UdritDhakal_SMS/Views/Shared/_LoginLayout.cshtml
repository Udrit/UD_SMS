@using Microsoft.AspNetCore.Identity
@using UdritDhakal_SMS.Data
@inject SignInManager<AppUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UdritDhakal_SMS</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UdritDhakal_SMS.styles.css" asp-append-version="true" />

    <style>
        .background-image {
            background-image: url('@Url.Content("~/images/Sms.jpg")');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-box {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        }

        .app-logo p {
            font-size: 30px;
            color: #000;
        }
    </style>
</head>
<body class="bg-warning">
    <header class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">SMS</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action=""><i class="fa-solid fa-graduation-cap"></i> Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fa-solid fa-book-open"></i> New User</a>
                </li>
            </ul>
        </div>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            <div class="row background-image">
                <div class="col-12 col-md-8 d-flex align-items-center justify-content-center" style="height: 80vh">
                    <!-- Optional additional content or image here -->
                </div>
                <div class="col-12 col-md-4 d-flex flex-column align-items-center justify-content-center">
                    <div class="login-box">
                        <header class="login-header text-center mb-4">
                            <div class="app-logo">
                                <div class="row m-0">
                                    <div class="col font-weight-bold text-primary mt-2">
                                        <p><b>Student Management System</b></p>
                                    </div>
                                </div>
                            </div>
                        </header>
                        <div class="login-content">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <footer class="bg-light text-center py-3">
        <p>&copy; 2024 UdritDhakal_SMS. All rights reserved.</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function fValidation(form) {
            return form.validate({

            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
